<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead>
          <tr class="table-active">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td><%= order.address%></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= order.order_calculation(order)%>円</td>
              <td><%= order.status%></td>
              <td>
                <%= link_to order_path(order) do %>
                  <button type="button" class="btn btn-primary">表示する</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>