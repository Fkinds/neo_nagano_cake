<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
    <div class="row">
      <div class="col m-1 ">氏名</div>
      <div class="col m-1 ">
        <%= f.text_field :family_name %>
        <%= f.text_field :given_name %>
      </div>
    </div>
    <div class="row">
      <div class="col m-1">フリガナ</div>
      <div class="col m-1">
        <%= f.text_field :family_name_kana %>
        <%= f.text_field :given_name_kana %>
      </div>
    </div>
    <div class="row">
      <div class="col m-1">郵便番号</div>
      <div class="col m-1">
        <%= f.text_field :zip_code %>
      </div>
    </div>
    <div class="row">
      <div class="col m-1">住所</div>
      <div class="col m-1">
        <%= f.text_field :address, :size=>"46" %>
      </div>
    </div>
    <div class="row">
      <div class="col m-1">電話番号</div>
      <div class="col m-1">
        <%= f.text_field :phone_number %>
      </div>
    </div>
    <div class="row">
      <div class="col m-1">メールアドレス</div>
      <div class="col m-1">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-3"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
      <div class="col-3">
        <%= link_to customers_confirm_path do %>
          <button type="button" class="btn btn-danger">退会する</button>
        <% end %>
      </div>
      <div class="col-3"></div>
    </div>
  <% end %>
</div>