<div class="container">
  <div class="row">
    <div class="col-2 card text-center px-0" style="with: 5rem;">
      <div class="card-header">
        ジャンル検索
      </div>
      <div class="list-group list-group-flush">
        <% @genres.each do |genre| %>
          <li class="list-group-item">
            <%= link_to items_path(genre_id: genre.id) do %>
              <%= genre.name %>
            <% end  %>
          </li>
        <% end %>
      </div>
    </div>
    <div class="col-10 justify-content-center d-flex">
      ようこそ、nagano_cake
    </div>
  </div>
  <div class="row p-1">
    <h2>新着商品</h2>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col">
        <div class="card text-center" style="width: 15rem;">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <img class="card-image_tag">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image(100,100) %>
                <% end %>
              </img>
            </li>
            <li class="list-group-item">
              <h6 class="card-title">
                <%= link_to item_path(item) do %>
                  <%= item.name %>
                <% end %>
              </h6>
            </li>
            <li class="list-group-item">
              <p class="card-text">
                <%= link_to item_path(item) do %>
                  <%= item.price %>
                <% end %>
              </p>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
