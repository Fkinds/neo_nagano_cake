<div class="container">
  <div class="row">
    <div class="col">
      <h2>配送先編集</h2>
    </div>
  </div>
  <%= form_with model: @address, method: :patch do |f| %>
    <div class="row">
      <div class="col-2"><%= f.label :zip_code, "郵便番号" %></div>
      <div class="col"><%= f.text_field :zip_code, :size=>"20"%></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :address, "住所" %></div>
      <div class="col"><%= f.text_field :address, :size=>"50"%></div>
    </div>
    <div class="row">
      <div class="col-2"><%= f.label :name, "宛名" %></div>
      <div class="col"><%= f.text_field :name, :size=>"20"%></div>
      <div class="col"><%= f.submit "変更内容を保存する", class: "btn btn-success" %></div>
    </div>
  <% end %>
  </di>
</div>