<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col"><h2>配送先登録/一覧</h2></div>
  </div>
  <%= form_with model: Address.new do |f| %>
    <div class="row">
      <div class="col-3"><%= f.label :zip_code, "郵便番号(ハイフンなし)" %></div>
      <div class="col"><%= f.text_field :zip_code, :size=>"20" %></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :address, "住所" %></div>
      <div class="col"><%= f.text_field :address, :size=>"50" %></div>
    </div>
    <div class="row">
      <div class="col-3"><%= f.label :name, "宛名" %></div>
      <div class="col"><%= f.text_field :name, :size=>"20" %></div>
      <div class="col py-1"><%= f.submit "新規登録" ,class:"btn btn-success" %></div>
    </div>
    <div class="row">
      <div class="col">
        <table class="table table-hover">
          <thead>
            <tr class="table-active">
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.zip_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <% unless address.nil?&&address.empty? %>
                    <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                    <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>