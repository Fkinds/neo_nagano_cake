<div class="container">
  <div class="row">
    <div class="col-2"><h4>商品一覧</h4></div>
    <div class="col justify-content-end d-flex">
      <%= link_to "+", new_admin_item_path, class: "btn btn-light" %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="table-active">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_sold? %>
                <p class="text-muted">販売停止中</p>
              <% else %>
                <p class="text-success">販売中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>