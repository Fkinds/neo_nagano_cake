<div class="container">
  <div class="row">
    <div class="col-2 offset-1"><h2>商品詳細</h2></div>
    <div class="col"></div>
  </div>
  <div class="row">
    <div class="col-3 justify-content-center d-flex"><%= image_tag @item.get_item_image(200,200) %></div>
    <div class="col-7">
      <div class="row">
        <div class="col-3">商品名</div>
        <div class="col-4"><h5><%= @item.name %></h5></div>
      </div>
      <div class="row">
        <div class="col-3">商品説明</div>
        <div class="col-4"><h5><%= @item.introduction %></h5></div>
      </div>
      <div class="row">
        <div class="col-3">ジャンル</div>
        <div class="col-4"><h5><%= @item.genre.name %></h5></div>
      </div>
      <div class="row">
        <div class="col-3">税込価格</div>
        <div class="col-4"><h5><%= @item.tax_price %>円</h5></div>
      </div>
      <div class="row">
        <div class="col-3">販売ステータス</div>
        <div class="col-4">
          <% if @item.is_sold? %>
            <p class="text-muted">販売停止中</p>
          <% else %>
            <p class="text-success">販売中</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col text-center">
        <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
      </div>
    </div>
</div>