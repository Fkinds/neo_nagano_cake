<div class="container">
  <div class="row">
    <div class="col-3"><h2>ジャンル編集</h2></div>
    <div class="col-9"></div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
    <div class="row">
      <div class="col-2"><%= f.label :name, "ジャンル名" %></div>
      <div class="col-4"><%= f.text_field :name %></div>
      <div class="col-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>