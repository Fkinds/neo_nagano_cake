<div class="container">
  <div class="row">
    <div class="col-3 offset-1"><h4>ジャンル一覧・追加</h4></div>
  </div>
  <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
  <div class="row py-1">
    <div class="col-2"><%= f.label :name, "ジャンル名" %></div>
    <div class="col-3"><%= f.text_field :name, :size=>"20" %></div>
    <div class="col-2"><%= f.submit "新規登録", class: "btn btn-success" %></div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to edit_admin_genre_path(genre) do %>
                  <button type="button" class="btn btn-success">編集する</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>